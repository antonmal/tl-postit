<div class="span8 well">
  <p><%= render post.categories %></p>
  <h3><%= link_to post.title, post.url %></h3>
  <p><%= post.description %></p>
  <p class="post-details">
    created
    <% if post.creator %>
      <%= "by #{post.creator.username} " %>
    <% end %>
    <%= "at #{post.updated_at.to_time.strftime('%b %d %H:%M')}" %>
  </p>
  <p>
    <%= link_to "#{post.comments.size} comments", post, class: 'btn btn-success' %>
  </p>
</div>
