<% if @post.errors.any? %>
  <div class="alert alert-error">
    <h5>There were errors in the form:</h5>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well span4">
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title, 'Post title' %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :url, 'Link' %>
      <%= f.text_field :url %>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <div class="control-group">
      <%= f.submit(@post.new_record? ? 'Create' : 'Update' , class: 'btn btn-success') %>
    </div>
  <% end %>
</div>
