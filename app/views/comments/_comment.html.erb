<% show_post_title ||= false %>

<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: :post do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br />
    <% end %>

    <%= comment.votes_count %> votes

    <% if logged_in? %>
      <br />
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: :post do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class="span6 well">
    <p>
      <%= comment.body %>
    </p>

    <p class="post-details">
      <% if show_post_title %>
        on
        <%= link_to comment.post.title, comment.post %>
        <br />
      <% end %>
      made
      <% if comment.creator %>
        by
        <%= link_to comment.creator.username, comment.creator %>
      <% end %>
      on
      <%= short_date(comment.updated_at) %>
    </p>
  </div>
</div>
