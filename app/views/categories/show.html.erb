<% breadcrumbs = link_to('All posts', posts_path) + " &raquo;  #{@category.name.capitalize}".html_safe %>
<%= render 'shared/content_title', title: breadcrumbs %>

<div class="row">
  <div class="well span6">
    <%= link_to 'Edit category', edit_category_path(@category), class: 'btn btn-warning' %>
    <%= link_to 'Delete category', @category, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this category?'} %>
  </div>
</div>

<%= render @category.posts %>
