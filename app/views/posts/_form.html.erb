<%= render 'shared/errors', object: @post %>

<div class="row">
  <div class="well span6">
    <%= form_for @post do |f| %>
      <div class="control-group">
        <%= f.label :title, 'Post title' %>
        <%= f.text_field :title, class: 'span6' %>
      </div>
      <div class="control-group">
        <%= f.label :url, 'Link' %>
        <%= f.text_field :url, class: 'span6' %>
      </div>
      <div class="control-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 5, class: 'span6' %>
      </div>
      <div class="control-group">
        <%= f.label :category_ids, 'Choose categories for the post:' %>
        <%= f.collection_check_boxes :category_ids, category_list, :id, :name do |cb| %>
          <%= cb.label class: 'checkbox inline' do %>
            <%= cb.check_box %>
            <%= cb.text %>
          <% end %>
        <% end %>

      </div>
      <div class="control-group">
        <%= f.submit(@post.new_record? ? 'Create' : 'Update' , class: 'btn btn-success') %>
      </div>
    <% end %>
  </div>
</div>
