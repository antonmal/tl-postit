<%= render 'shared/errors', object: @user %>

<%= form_for @user do |f| %>

  <div class="control-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="control-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="control-group">
    <%= f.label :timezone %>
    <%= f.time_zone_select :timezone, nil, default: Time.zone.name %>
  </div>
  <div class="contol-group">
    <%= f.label :phone, 'You mobile phone number' %>
    <%= f.telephone_field :phone %>
  </div>
  <%= f.submit @user.new_record? ? 'Register' : 'Update', class: 'btn btn-success' %>
<% end %>
