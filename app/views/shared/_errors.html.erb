<% if object.errors.any? %>
  <div class="row">
    <div class="alert alert-error span6">
      <h5>There are errors in this form:</h5>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
