<%= render 'shared/content_title', title: 'Contacts' %>

<div class="row">
  <div class="well span6">
    <%= form_tag do %>
      <div class="control-group">
        <%= label_tag :name, 'Your name *' %>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div class="control-group">
        <%= label_tag :email, 'Your email *' %>
        <%= email_field_tag :email, params[:email] %>
      </div>
      <div class="control-group">
        <%= label_tag :url, 'Your website' %>
        <%= url_field_tag :url, params[:url] %>
      </div>
      <div class="control-group">
        <%= label_tag :message, 'Your message *' %>
        <%= text_area_tag :message, params[:message] %>
      </div>
      <div class="control-group">
        <%= submit_tag 'Send message', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
