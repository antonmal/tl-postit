<%= render 'shared/errors', object: @post %>

<div class="row">
  <div class="well span6">
    <%= form_for @post do |f| %>
      <div class="control-group">
        <%= f.label :title, 'Post title' %>
        <%= f.text_field :title, class: 'span6' %>
      </div>
      <div class="control-group">
        <%= f.label :url, 'Link' %>
        <%= f.text_field :url, class: 'span6' %>
      </div>
      <div class="control-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 5, class: 'span6' %>
      </div>
      <div class="control-group">
        <select multiple name="comments" class="span6">
          <option value='1'>Option 1</option>
          <option value='2'>Option 2</option>
          <option value='3'>Option 3</option>
        </select>
      </div>
      <div class="control-group">
        <%= f.submit(@post.new_record? ? 'Create' : 'Update' , class: 'btn btn-success') %>
      </div>
    <% end %>
  </div>
</div>
