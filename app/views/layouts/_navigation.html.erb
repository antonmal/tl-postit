<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<div class="nav nav-group">
  <div class="dropdown">
    <%= link_to '#', class: 'dropdown-toggle btn btn-small btn-default', 'data-toggle' => 'dropdown' do %>
      Categories <span class="caret"></span>
    <% end %>
    <ul class="dropdown-menu">
      <% category_list.each do |category| %>
        <li><%= link_to category.name, category %></li>
      <% end %>
      <li class="divider"></li>
      <li><%= link_to 'Show all categories', categories_path %></li>
      <li>
        <%= link_to new_category_path do %>
          <i class='icon-plus'></i>
          New category
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class="nav">
  <%= link_to 'New post', new_post_path, class: 'btn btn-success btn-small' %>
</div>

<% if logged_in? %>
  <div class='nav'>
    Welcome, <%= current_user.username %>!
  </div>
  <div class="nav">
    <%= link_to 'Logout', logout_path, class: 'btn btn-default btn-small' %>
  </div>
<% else %>
  <div class="nav">
    <%= link_to 'Register', register_path, class: 'btn btn-default btn-small' %>
  </div>

  <div class="nav">
    <%= link_to 'Login', login_path, class: 'btn btn-default btn-small' %>
  </div>
<% end %>
